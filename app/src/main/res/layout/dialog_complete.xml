<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@drawable/bg_ripple_click_view_circle"
        android:padding="5dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/image_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/bg_ripple_click_view_circle"
        android:padding="3dp"
        android:src="@drawable/ic_home" />

    <ImageView
        android:id="@+id/image_loading_or_saved"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/image_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/image_saved_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_loading_or_saved"
        android:layout_margin="20dp" />
</RelativeLayout>