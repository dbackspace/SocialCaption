<?xml version="1.0" encoding="utf-8"?>
<com.xlteam.socialcaption.external.utility.customview.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_gallery"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="0.5dp">

    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <include
        android:id="@+id/loading_view"
        layout="@layout/loading_container"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />
</com.xlteam.socialcaption.external.utility.customview.SquareRelativeLayout>