<?xml version="1.0" encoding="utf-8"?>
<com.xlteam.socialcaption.external.utility.customview.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_gallery"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="0.5dp">

    <ImageView
        android:id="@+id/img_item_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <CheckBox
        android:id="@+id/checkbox_item_gallery"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/img_item_gallery"
        android:layout_alignEnd="@id/img_item_gallery"
        android:layout_margin="2dp"
        android:background="@drawable/checkbox_custom_2"
        android:button="@null"
        android:visibility="gone" />
</com.xlteam.socialcaption.external.utility.customview.SquareRelativeLayout>
