<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/layout_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FA"
            android:orientation="vertical">

            <com.xlteam.socialcaption.external.utility.customview.SpannableTextView
                android:id="@+id/tv_content_of_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:minLines="4"
                android:singleLine="false"
                android:text="Content"
                android:textColor="@color/color_25"
                android:textSize="14dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_menu_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_saved"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_ripple_click_view_circle"
            android:padding="5dp"
            android:src="@drawable/bookmark_toggle_button" />

        <ImageView
            android:id="@+id/image_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_ripple_click_view_circle"
            android:padding="5dp"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/image_copy"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_ripple_click_view_circle"
            android:padding="5dp"
            android:src="@drawable/ic_copy" />

        <ImageView
            android:id="@+id/image_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_ripple_click_view_circle"
            android:padding="5dp"
            android:src="@drawable/ic_share" />
    </LinearLayout>
</RelativeLayout>