<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/text_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/background_border_text_added" />

    <TextView
        android:id="@+id/text_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="@dimen/margin_4dp"
        android:text="@string/your_text"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/image_text_remove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_item_text"
        android:padding="2dp"
        android:src="@drawable/ic_close"
        android:tint="@color/color_25" />

    <ImageView
        android:id="@+id/image_text_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_item_text"
        android:padding="4dp"
        android:src="@drawable/ic_text_edit" />

    <ImageView
        android:id="@+id/image_text_balance"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_item_text"
        android:padding="2dp"
        android:src="@drawable/ic_balance" />

    <ImageView
        android:id="@+id/image_text_zoom"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_item_text"
        android:padding="3dp"
        android:src="@drawable/ic_zoom" />
</RelativeLayout>
